@page
@model Client_Laia_T1.PR2.APIrest.Pages.AddGameModel
@{
    ViewData["Title"] = "Afegir Joc";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-header bg-primary text-white rounded-top-4">
                    <h3 class="mb-0">Afegir un nou joc</h3>
                </div>
                <div class="card-body p-4">
                    <form method="post">
                        <div class="mb-3">
                            <label asp-for="game.Title" class="form-label">Títol</label>
                            <input asp-for="game.Title" class="form-control" placeholder="Ex: Zelda: Breath of the Wild" />
                            <span asp-validation-for="game.Title" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="game.Description" class="form-label">Descripció</label>
                            <textarea asp-for="game.Description" class="form-control" rows="3" placeholder="Introdueix una breu descripció..."></textarea>
                            <span asp-validation-for="game.Description" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="game.Desenv" class="form-label">Desenvolupador</label>
                            <input asp-for="game.Desenv" class="form-control" placeholder="Ex: Nintendo" />
                            <span asp-validation-for="game.Desenv" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="game.Img" class="form-label">URL de la Imatge</label>
                            <input asp-for="game.Img" class="form-control" placeholder="Ex: https://..." />
                            <span asp-validation-for="game.Img" class="text-danger small"></span>
                        </div>

                        <div class="d-flex justify-content-between align-items-center mt-4">
                            <a asp-page="/ViewGames" class="btn btn-outline-secondary">← Tornar a la llista</a>
                            <button type="submit" class="btn btn-success">Afegir joc</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}